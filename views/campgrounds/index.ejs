<% include ../partials/header %>

<div class="container">
	<h1>
		
	</h1>
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
			</p>
			<div>
				<form action="/campgrounds" method="GET" class="form-inline">
					<div class="d-flex flex-row">
						<input type="text" name="search" placeholder="Campground search..." class="form-control">
						<input type="submit" value="Search" class="btn btn-light ml-1">
					</div>
				</form>
			</div>
		</div>
	</header>
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<div class="col-lg-12">
			<h3>Our Most Popular Campgrounds</h3>
		</div>
	
		<% campgrounds.forEach(function(campground) { %>
			<div class="col-lg-3 col-md-4 col-sm-6">
				<div class="card mb-2">
					<img class="card-img-top" src="<%= campground.image %>">
					<div class="card-body">
						<h4 class="card-title"><%= campground.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<% include ../partials/footer %>