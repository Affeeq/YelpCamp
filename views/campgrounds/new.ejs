<% include ../partials/header %>

<div class="container">
	<div class="row justify-content-center align-items-center">
		<div class="col-12 text-center">
			<h1>Create a new Campground</h1>
		</div>
		<div class="col-12 col-md-10 col-lg-8 col-xl-6 text-center">
			<form action="/campgrounds" method="POST" style="width: 70%;margin: 25px auto;" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input type="file" id="image" name="image" accept="image/*" placeholder="upload image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location" id="location" placeholder="location's address">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
	
</div>

<% include ../partials/footer %>