<% include ./partials/header %>

<div class="container">
	<div class="row justify-content-center align-items-center">
		<div class="col-12 text-center">
			<h1>Forgot Password?</h1>
		</div>
		<div class="col-8 col-md-6 col-lg-4 text-center">
			<form class="mt-3" action="/forgot" method="POST">
				<div class="form-group">
					<input class="form-control" type="email" name="email" placeholder="type email here...">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type="submit" value="Password Reset">
				</div>
			</form>
		</div>
	</div>
</div>

